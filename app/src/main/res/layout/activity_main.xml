<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter time of the day"
        android:textSize="16sp"
<!--        android:layout_marginButtom="8dp"/>-->

    <EditText
        android:id="@+id/editTextTime"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:hint="E.g., Morning"
        android:textSize="16sp"
        android:inputType="text"/>

    <Button
        android:id="@+id/buttonSuggestionMeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suggest Meal"
        android:layout_marginTop="10dp"/>


    <Button
        android:id="@+id/buttonReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textViewMealSuggestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meal will appear here"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

</LinearLayout>